extends ../layouts/main-layout.pug

block styles
  link(rel="stylesheet", href="/css/product.css")
  link(rel="stylesheet", href="/css/forms.css")

block content 
  main
    - var path = editing 
    form.product-form(action = path ? "/admin/edit-product" : "/admin/add-product", method="POST")
      .form-control
        label(for="title") Title
        input(type="text", name="title", value = path ? `${product.title}` : "")#title
      .form-control
        label(for="imageUrl") Image URL
        input(type="text", name="imageUrl", value = path ? `${product.imageUrl}` : "")#imageUrl 
      .form-control
        label(for="price") Price
        input(type="number", name="price", value = path ? `${product.price}` : "")#price
      .form-control
        label(for="description") Description
        textarea(name="description" rows="5")#description #{path ? `${product.description}` : ""}
      if editing
        input(type="hidden", value=`${product.id}`, name="productId")
      button.btn(type="submit") 
        if editing 
          span Update Product
        else 
          span Add Product

