extends ../layouts/main-layout.pug

block styles
  link(rel="stylesheet", href="/css/cart.css")

block content 
  main
    if products.length > 0
      ul.cart__item-list
        each product in products
          li.cart__item
            h1 #{product.productId.title} 
            h2 Quantity: #{product.quantity}
            form(action="/cart-delete-item" method="POST")
              input(type="hidden" value=product.productId._id name="productId")
              input(type="hidden", name="_csrf", value=`${csrfToken}`)
              button(type="submit").btn.danger Delete
      hr
      .centered
        form(action="/create-order" method="POST")
          input(type="hidden", name="_csrf", value=`${csrfToken}`)
          button(type="submit").btn Order Now!
    else
      h1 No Products in Cart